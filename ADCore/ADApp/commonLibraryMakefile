# This file contains the commands to build driver and plugin libraries

LIB_LIBS += ADBase
LIB_LIBS += asyn

ifeq ($(WITH_PVA),YES)
  LIB_LIBS += ntndArrayConverter
  LIB_LIBS += nt
  LIB_LIBS += pvDatabase
  LIB_LIBS += pvAccess
  LIB_LIBS += pvData
endif

ifeq ($(WITH_NETCDF),YES)
  ifeq ($(NETCDF_EXTERNAL),NO)
    LIB_LIBS += netCDF
  else
    ifdef NETCDF_LIB
      netcdf_DIR   = $(NETCDF_LIB)
      LIB_LIBS     += netcdf
    else
      LIB_SYS_LIBS += netcdf
    endif
  endif
endif

ifeq ($(WITH_GRAPHICSMAGICK), YES)
  ifeq ($(GRAPHICSMAGICK_EXTERNAL),NO)
    LIB_LIBS               += Magick++ coders Magick jbig jp2 bzlib png webp lcms ttf wmf filters
  else
    ifdef GRAPHICSMAGICK_LIB
      GraphicsMagick_DIR     = $(GRAPHICSMAGICK_LIB)
      GraphicsMagick++_DIR   = $(GRAPHICSMAGICK_LIB)
      GraphicsMagickWand_DIR = $(GRAPHICSMAGICK_LIB)
      LIB_LIBS             += GraphicsMagick++ GraphicsMagick
    else
      LIB_SYS_LIBS         += GraphicsMagick++ GraphicsMagick
    endif
  endif
  # The following system libraries must be installed to use GraphicsMagick
  LIB_SYS_LIBS_Linux    += X11 Xext
endif

ifeq ($(WITH_TIFF),YES)
  ifeq ($(TIFF_EXTERNAL),NO)
    LIB_LIBS += tiff
  else
    ifdef TIFF_LIB
      tiff_DIR     = $(TIFF_LIB)
      LIB_LIBS     += tiff
    else
      LIB_SYS_LIBS += tiff
    endif
  endif
endif

ifeq ($(XML2_EXTERNAL),NO)
  LIB_LIBS += xml2
else
  ifdef XML2_LIB
    xml2_DIR     = $(XML2_LIB)
    LIB_LIBS     += xml2
  else
    LIB_SYS_LIBS += xml2
  endif
endif

ifeq ($(WITH_NEXUS),YES)
  ifeq ($(NEXUS_EXTERNAL),NO)
    LIB_LIBS += NeXus
  else
    ifdef NEXUS_LIB
      nexus_DIR    = $(NEXUS_LIB)
      LIB_LIBS     += NeXus
    else
      LIB_SYS_LIBS += NeXus
    endif
  endif
endif

ifeq ($(WITH_HDF5),YES)
  ifeq ($(HDF5_EXTERNAL),NO)
    LIB_LIBS += hdf5
    LIB_LIBS += hdf5_hl
  else
    ifdef HDF5_LIB
      hdf5_DIR     = $(HDF5_LIB)
      hdf5_hl_DIR  = $(HDF5_LIB)
      LIB_LIBS     += hdf5
      LIB_LIBS     += hdf5_hl
    else
      LIB_SYS_LIBS += hdf5
      LIB_SYS_LIBS += hdf5_hl
    endif
  endif
  ifeq ($(HDF5_STATIC_BUILD), NO)
    USR_CXXFLAGS_WIN32    += -DH5_BUILT_AS_DYNAMIC_LIB
    USR_CFLAGS_WIN32      += -DH5_BUILT_AS_DYNAMIC_LIB
  else
    USR_CXXFLAGS_WIN32    += -DH5_BUILT_AS_STATIC_LIB
    USR_CFLAGS_WIN32      += -DH5_BUILT_AS_STATIC_LIB
  endif
endif

ifeq ($(WITH_BITSHUFFLE),YES)
  ifeq ($(BITSHUFFLE_EXTERNAL),NO)
    LIB_LIBS += bitshuffle
  else
    ifdef BITSHUFFLE_LIB
      bitshuffle_DIR = $(BITSHUFFLE_LIB)
      LIB_LIBS     += bitshuffle
    else
      LIB_SYS_LIBS += bitshuffle
    endif
  endif
endif

ifeq ($(WITH_BLOSC),YES)
  ifeq ($(BLOSC_EXTERNAL),NO)
    LIB_LIBS += blosc
  else
    ifdef BLOSC_LIB
      blosc_DIR     = $(BLOSC_LIB)
      LIB_LIBS     += blosc
    else
      LIB_SYS_LIBS += blosc
    endif
  endif
endif

ifeq ($(WITH_SZIP),YES)
  ifeq ($(SZIP_EXTERNAL),NO)
    LIB_LIBS += szip
  else
    ifdef SZIP_LIB
      sz_DIR       = $(SZIP_LIB)
      LIB_LIBS     += sz
    else
      LIB_SYS_LIBS += sz
    endif
  endif
endif

ifeq ($(WITH_ZLIB),YES)
  ifeq ($(ZLIB_EXTERNAL),NO)
    LIB_LIBS += zlib
  else
    ifdef ZLIB_LIB
      z_DIR        = $(ZLIB_LIB)
      LIB_LIBS     += z
    else
      LIB_SYS_LIBS += z
    endif
  endif
endif

ifeq ($(WITH_JPEG),YES)
  ifeq ($(JPEG_EXTERNAL),NO)
    LIB_LIBS += jpeg
  else
    ifdef JPEG_LIB
      jpeg_DIR     = $(JPEG_LIB)
      LIB_LIBS     += jpeg
    else
      LIB_SYS_LIBS += jpeg
    endif
  endif
endif

ifeq ($(EPICS_LIBCOM_ONLY),YES)
  LIB_LIBS += Com
else
  LIB_LIBS += $(EPICS_BASE_IOC_LIBS)
endif

LIB_SYS_LIBS_WIN32      += gdi32 oleaut32 

USR_LDFLAGS_Darwin      += -framework CoreFoundation
